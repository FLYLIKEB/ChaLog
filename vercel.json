{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/proxy?path=$1" },
    { 
      "source": "/((?!api|assets|_next|favicon\\.ico|robots\\.txt|sitemap\\.xml).*)", 
      "destination": "/index.html" 
    }
  ]
}

