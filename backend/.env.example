# ============================================
# ChaLog Backend Environment Variables
# ============================================
# 이 파일을 복사하여 .env 파일을 만들고 실제 값으로 변경하세요.
# cp .env.example .env

# ============================================
# 데이터베이스 설정
# ============================================
DATABASE_URL=mysql://admin:password@localhost:3307/chalog
DB_SYNCHRONIZE=false
DB_SSL_ENABLED=false
DB_SSL_REJECT_UNAUTHORIZED=false

# ============================================
# JWT 인증 설정
# ============================================
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# ============================================
# 서버 설정
# ============================================
PORT=3000
NODE_ENV=development

# ============================================
# 프론트엔드 URL 설정 (CORS)
# ============================================
FRONTEND_URL=http://localhost:5173
FRONTEND_URLS=http://localhost:5173,http://localhost:5174

# ============================================
# AWS S3 설정 (이미지 저장, 선택사항)
# ============================================
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_ENDPOINT=

# ============================================
# 테스트 환경 설정
# ============================================
TEST_DATABASE_URL=mysql://admin:password@localhost:3307/chalog_test
