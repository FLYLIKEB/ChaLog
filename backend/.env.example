# Database Configuration
# 로컬 MySQL 사용 시:
# DATABASE_URL=mysql://user:password@localhost:3306/chalog
# AWS RDS/Aurora 사용 시 (SSH 터널):
# DATABASE_URL=mysql://admin:password@localhost:3307/chalog
DATABASE_URL=mysql://admin:password@localhost:3307/chalog

# Database Options
# 개발 환경에서만 true로 설정 (데이터 손실 위험 있음)
DB_SYNCHRONIZE=false

# SSL 연결 사용 여부 (AWS RDS/Aurora 사용 시 권장)
DB_SSL_ENABLED=false

# SSL 인증서 검증 (기본값: true, 개발/테스트에서만 false로 설정)
DB_SSL_REJECT_UNAUTHORIZED=true

# JWT Configuration
# 프로덕션에서는 반드시 강력한 비밀키로 변경하세요
JWT_EXPIRES_IN=7d
JWT_SECRET=your-secret-key-change-in-production

# Server Configuration
NODE_ENV=development
PORT=3000

# Frontend URL (CORS 설정용)
FRONTEND_URL=http://localhost:5173

# SSH Tunnel Configuration (AWS RDS/Aurora 사용 시)
# SSH 키 파일 경로
SSH_KEY_PATH=~/.ssh/your-key.pem

# EC2 인스턴스 정보
EC2_HOST=YOUR_EC2_HOST
EC2_USER=YOUR_EC2_USER

# SSH 터널 포트 설정
SSH_TUNNEL_LOCAL_PORT=3307
SSH_TUNNEL_REMOTE_HOST=YOUR_RDS_ENDPOINT
SSH_TUNNEL_REMOTE_PORT=3306
